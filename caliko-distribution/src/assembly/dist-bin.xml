<?xml version="1.0" encoding="UTF-8" ?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <files>
    <file>
      <source>../LICENSE.txt</source>
      <outputDirectory>./caliko</outputDirectory>      
    </file>
	<file>
      <source>../Changelog.txt</source>
      <outputDirectory>./caliko</outputDirectory>      
    </file>
  </files>
  
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
	  
      <includes>
        <include>me.winter.caliko:caliko</include>
        <include>me.winter.caliko.visualisation:caliko-visualisation</include>
        <include>me.winter.caliko.demo:caliko-demo</include>
      </includes>
	  
      <binaries>
        <outputDirectory>caliko/jar</outputDirectory>
        <unpack>false</unpack>
        <!--  Do not include lwjgl*jars. Instead, they are in the -with-dependencies.jar -->
        <includeDependencies>false</includeDependencies>
      </binaries>      
	  
    </moduleSet>
	
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>me.winter.caliko.demo:caliko-demo</include>
      </includes>
      <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
          <fileSet>
            <directory>target/</directory>
            <outputDirectory>caliko/jar</outputDirectory>
            <excludes>
              <exclude>**/.project</exclude>
              <exclude>**/.settings/</exclude>
              <exclude>**/.classpath</exclude>
              <exclude>pom.xml</exclude>
            </excludes>
            <includes>
              <include>*-jar-with-dependencies.jar</include>
            </includes>            
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
	
  </moduleSets> 
  
  <fileSets>
  
    <fileSet>
      <directory>${project.basedir}/src/site/docs</directory>
      <outputDirectory>caliko/doc</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>            
    </fileSet>    
	
    <fileSet>
      <directory>${project.basedir}/target</directory>
      <outputDirectory>caliko/doc</outputDirectory>
      <includes>
        <include>*-javadoc.jar</include>
      </includes>            
    </fileSet>
	
    <fileSet>
      <directory>${project.basedir}/target</directory>
      <outputDirectory>caliko</outputDirectory>
      <includes>
        <include>*-sources.zip</include>
      </includes>            
    </fileSet>
	
  </fileSets>
</assembly>